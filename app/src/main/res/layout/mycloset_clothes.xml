                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/circle"
                android:scaleType="fitCenter"
                android:layout_weight="1"
                app:layout_constraintBottom_toTopOf="@+id/cloth_text"/>
            <TextView
