<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".startApp_1.activity.RecommendResultActivity">

    <TextView
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginLeft="10dp"
        android:text="뒤로가기"
        android:textSize="15dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/tv_list"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_marginRight="10dp"
        android:src="@drawable/view_list"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!--    <TextView-->
    <!--        android:layout_width="200dp"-->
    <!--        android:layout_height="100dp"-->
    <!--        android:textSize="50dp"-->
    <!--        android:textColor="@color/themeColor"-->
    <!--        app:layout_constraintLeft_toRightOf="@id/back"-->
    <!--        app:layout_constraintRight_toLeftOf="@id/tv_list"-->
    <!--        android:text="추천코디"/>-->

    <ImageView
        android:id="@+id/buttonchoice"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:src="@drawable/final_choice"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_list" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ct_coordi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/buttonchoice">

        <androidx.cardview.widget.CardView
            android:id="@+id/cvTop"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginTop="30dp"
            android:visibility="invisible"
            app:cardCornerRadius="50dp"
            app:cardElevation="0dp"
            android:layout_marginLeft="6dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/coordiTop"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/cvTop_only"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginTop="30dp"
            android:visibility="invisible"
            app:cardCornerRadius="50dp"
            app:cardElevation="0dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/coordiTop_only"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/cvBottom"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:visibility="invisible"
            app:cardCornerRadius="50dp"
            app:cardElevation="0dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="6dp"
            app:layout_constraintTop_toBottomOf="@+id/cvTop">

            <ImageView
                android:id="@+id/coordiBottom"
                android:layout_width="200dp"
                android:layout_height="200dp" />

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/cvBottom_only"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:visibility="invisible"
            app:cardCornerRadius="50dp"
            app:cardElevation="0dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cvTop_only">

            <ImageView
                android:id="@+id/coordiBottom_only"
                android:layout_width="200dp"
                android:layout_height="200dp" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cvOuter"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:visibility="invisible"
            app:cardCornerRadius="50dp"
            app:cardElevation="0dp"
            app:layout_constraintBottom_toBottomOf="@+id/cvBottom"
            app:layout_constraintLeft_toRightOf="@+id/cvBottom"
            android:layout_marginRight="2dp"
            app:layout_constraintTop_toTopOf="@+id/cvTop">

            <ImageView
                android:id="@+id/coordiOuter"
                android:layout_width="200dp"
                android:layout_height="200dp" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cvDress"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:visibility="invisible"
            app:cardCornerRadius="50dp"
            app:cardElevation="0dp"
            app:layout_constraintBottom_toBottomOf="@+id/cvBottom"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="6dp"
            app:layout_constraintTop_toTopOf="@+id/cvTop">

            <ImageView
                android:id="@+id/coordiDress"
                android:layout_width="200dp"
                android:layout_height="200dp" />
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/cvDress_only"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:visibility="invisible"
            app:cardCornerRadius="50dp"
            app:cardElevation="0dp"
            app:layout_constraintBottom_toBottomOf="@+id/cvBottom"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/cvDress"
            app:layout_constraintTop_toTopOf="@+id/cvTop_only">

            <ImageView
                android:id="@+id/coordiDress_only"
                android:layout_width="200dp"
                android:layout_height="208dp" />
        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/reSelect"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="617dp"
        android:layout_marginRight="40dp"
        android:padding="10dp"
        android:src="@drawable/new_shuffle"
        app:layout_constraintHorizontal_bias="0.778"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/save"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/coordiName"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="코디명을 입력해주세요"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ct_coordi" />

    <!--    <ImageView-->
    <!--        android:id="@+id/reSelect"-->
    <!--        android:layout_width="50dp"-->
    <!--        android:layout_height="50dp"-->
    <!--        android:padding="10dp"-->
    <!--        android:src="@drawable/refresh"-->
    <!--        app:layout_constraintLeft_toLeftOf="parent"-->
    <!--        app:layout_constraintRight_toLeftOf="@+id/save"-->
    <!--        app:layout_constraintTop_toTopOf="@+id/save" />-->

    <ImageView
        android:id="@+id/save"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="12dp"
        android:src="@drawable/new_save"
        app:layout_constraintHorizontal_bias="0.67"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/coordiName" />

    <TextView
        android:id="@+id/calendar"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="달력에추가"
        app:layout_constraintLeft_toRightOf="@+id/save"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/save" />


    <ImageView
        android:id="@+id/img_loading"
        android:visibility="invisible"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/ct_coordi"
        app:layout_constraintTop_toTopOf="@id/ct_coordi"/>

</androidx.constraintlayout.widget.ConstraintLayout>
