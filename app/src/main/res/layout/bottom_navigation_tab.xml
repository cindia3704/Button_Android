<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="75dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#ffffff"
    android:elevation="5dp"
    android:weightSum="5"
    android:layout_gravity="bottom"
    android:orientation="horizontal">

    <RelativeLayout 
        android:id="@+id/btn_bottom_navi_recommend_tab"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <ImageView
            android:layout_width="45dp"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            android:src="@drawable/mycloth" />

    </RelativeLayout>



    <RelativeLayout
        android:id="@+id/btn_bottom_navi_mycloset_tab"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerInParent="true"
            android:src="@drawable/self"/>

    </RelativeLayout>


    <RelativeLayout

        android:id="@+id/btn_bottom_navi_selfcoordi_tab"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_centerInParent="true"
            android:src="@drawable/tab_button_icon"/>

    </RelativeLayout>





    <RelativeLayout
        android:id="@+id/btn_bottom_navi_friendlist_tab"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginTop="5dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/friend"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/btn_bottom_navi_calendar_tab"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <ImageView
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_centerInParent="true"
            android:src="@drawable/cal"/>

    </RelativeLayout>

</LinearLayout>
